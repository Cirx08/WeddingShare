@model UsersModel
@using WeddingShare.Views.Admin.Tabs

<section class="pnl-admin pnl-admin-users pb-0 pb-lg-0 d-none">
    <div class="container px-3 px-lg-1 my-3 my-lg-4">
        <div class="row">
            <div class="col-12">
                <h1 class="display-6">@_localizer["Users"].Value
                    <span class="header-actions">
                        <span class="action text-success pointer">
                            <i class="btnAddUser fa-solid fa-user-plus" alt="@_localizer["Add"].Value"></i>
                            <span>@_localizer["Add"].Value</span>
                        </span>
                    </span>
                </h1>
            </div>
        </div>
        <div class="row">
            <div id="users-list" class="col-12">
                <partial name="~/Views/Admin/Partials/UsersList.cshtml" model="Model?.Users" />
            </div>
        </div>
    </div>
</section>