@model SettingsModel
@using WeddingShare.Views.Admin.Tabs

@if (Model?.Settings != null)
{
    <section class="pnl-admin pnl-admin-settings pb-0 pb-lg-4 d-none">
        <div class="container px-3 px-lg-1 my-3 my-lg-0">
            <div class="row px-3">
                <div id="settings-list" class="col-12">
                    <partial name="~/Views/Admin/Partials/SettingsList.cshtml" model="new WeddingShare.Views.Admin.Partials.SettingsListModel() { Settings = Model.Settings, CustomResources = Model.CustomResources }" />
                </div>
            </div>
        </div>
    </section>


    <section class="pnl-admin pnl-admin-settings pt-1 pt-lg-2 pb-0 pb-lg-2 d-none">
        <div class="container px-3 px-lg-1 my-3 my-lg-0">
            <div class="row px-3 pb-5">
                <div class="col-12 text-end">
                    <button type="button" id="btnSaveSettings" class="btn btn-primary">@_localizer["Save"].Value</button>
                </div>
            </div>
        </div>
    </section>
}