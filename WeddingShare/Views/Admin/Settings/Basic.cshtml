                    }
                }
            </select>
            <div class="form-text">@_localizer["Settings_Basic_LinksOpenNewTab_Help"].Value</div>
        </div>
    </div>

    <div class="row mb-4 mb-lg-4">
        <div class="col-12">
            <label>@_localizer["Settings_Basic_ThumbnailSize_Label"].Value</label>
            <input class="setting-field form-control" data-setting-name="@Settings.Basic.ThumbnailSize" placeholder="720" value="@Model.GetValue(Settings.Basic.ThumbnailSize.ToUpper(), "720")" type="number" min="100" step="50" />
            <div class="form-text">@_localizer["Settings_Basic_ThumbnailSize_Help"].Value</div>
